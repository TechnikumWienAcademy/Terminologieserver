        <html><![CDATA[
            <script type="text/javascript">
                function singlelogout(p1) {
                    var xhttp;
                    if (window.XMLHttpRequest) {
                        xhttp = new XMLHttpRequest();
                    } else {
                        // code for IE6, IE5
                        xhttp = new ActiveXObject("Microsoft.XMLHTTP");
                    }
                    xhttp.open("POST", p1, false);
                    xhttp.send();
                    alert("Ausgeloggt");
                }
            </script>
            ]]>
